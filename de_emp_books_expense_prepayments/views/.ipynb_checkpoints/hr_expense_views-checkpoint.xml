<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <record id="hr_expense_view_form_inherit_prepayment" model="ir.ui.view">
            <field name="name">hr.expense.view.form.inherit.prepayment</field>
            <field name="model">hr.expense</field>
            <field name="inherit_id" ref="hr_expense.hr_expense_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group[1]/group[1]" position="inside">
                    <field name="employee_id" invisible="1" />
                    <field name="expense_prepayment_line_id"
                           required="payment_mode == 'prepayment'"
                           invisible="payment_mode != 'prepayment's"/>
                    <field name="amount_advanced"
                           invisible="payment_mode != 'prepayment' "/>
                </xpath>
                 
            </field>
        </record>
    
    
    <record id="view_hr_expense_sheet_form_inherit_prepayment" model="ir.ui.view">
            <field name="name">view.hr.expense.sheet.form.inherit.prepayment</field>
            <field name="model">hr.expense.sheet</field>
            <field name="inherit_id" ref="hr_expense.view_hr_expense_sheet_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='expense_line_ids']/list/field[@name='name']" position="after">
                    <field name="employee_id" invisible="1" />
                    <field name="expense_prepayment_line_id"
                           required="parent.payment_mode == 'prepayment'"
                           column_invisible="parent.payment_mode != 'prepayment'"/>
                    
                </xpath>
                <xpath expr="//field[@name='expense_line_ids']/list/field[@name='total_amount']" position="after">
                    <field name="amount_advanced" string="Advanced"
                           column_invisible="parent.payment_mode != 'prepayment'"/>
                </xpath>
                 
            </field>
        </record>
    

       
</odoo>