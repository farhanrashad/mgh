<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="sales_format" model="report.paperformat">
        <field name="name">A4 session report</field>
        <field name="format">A4</field>
        <field name="page_height">0</field>
        <field name="page_width">0</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">40</field>
        <field name="margin_bottom">25</field>
        <field name="dpi">90</field>
    </record>

    <report
            id="sale_order_ip_main"
            string="Quotation / Company name temp rev2"
            model="sale.order"
            report_type="qweb-pdf"
            file="de_report_customization.sale_order_ip_new"
            name="de_report_customization.sale_order_ip_new"
            paperformat="de_report_customization.sales_format"/>

    <!--    <template id="assets_backend_table_design_session" name="openacademy assets" inherit_id="web.assets_backend">-->
    <!--        <xpath expr="." position="inside">-->
    <!--            <link rel="stylesheet" href="/de_report_customization/static/src/css/my_style.css"/>-->
    <!--        </xpath>-->
    <!--    </template>-->



    <template id="sale_order_ip_new">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="s">
                <t t-set="doc" t-value="s.with_context(lang=s.partner_id.lang)"/>
                <t t-call="de_report_customization.custom_session_header_footer"/>
                <t t-call="web.external_layout">
                    <link rel="stylesheet" href="/de_report_customization/static/src/css/my_style.css"/>
                    <div class="page">
                        <div class="row">
                            <div class="col-12 text-left">
                                <h3 style="color:black;">Quotation</h3>
                            </div>
                        </div>

                        <div class="row set_adjust1">
                            <div class="col-5  text-left" >
                                <table width="100%" style="border:1px solid black; height:240px;" class="roundedCorners">
                                    <tr>
                                        <td class="test3">CUSTOMER</td>
                                    </tr>
                                    <tr>

                                        <td class="test4"><span t-field="s.partner_id.name" /><br></br> <br></br> <span t-field="s.partner_id.street" /><br></br><br><span t-field="s.partner_id.street2" /></br><br></br><span t-field="s.partner_id.city" /></td>

                                    </tr>


                                </table>
                            </div>
                            <div class="col-1 "></div>
                            <div class="col-6 text-left set_adjust2" >
                                <table width="100%" style="border:1px solid black; height:240px;"  class="roundedCorners">
                                    <tr>
                                        <td class="test">QUOTATION NUMBER</td>
                                        <td class="test2" > <span t-field="s.name"></span></td>

                                    </tr>
                                    <tr>
                                        <td class="test">QUOTATION DATE</td>
                                        <td class="test2"> <span t-if="s.get_sale_order_date()"  t-esc="s.get_sale_order_date()" /></td>

                                    </tr>
                                    <tr>
                                        <td class="test">EXPIRATION DATE</td>
                                        <td class="test2" > <span t-if="s.validity_date" t-field="s.validity_date" /></td>

                                    </tr>
<!--                                    <tr>-->
<!--                                        <td class="test">TERMS</td>-->
<!--                                        <td class="test2"> <span t-if="s.shipping_id" t-field="s.shipping_id.name" /></td>-->

<!--                                    </tr>-->
                                    <tr>
                                        <td class="test">UST# - REF#</td>
                                        <td class="test2"> <span t-if="s.client_order_ref" t-field="s.client_order_ref" /></td>

                                    </tr>
                                    <tr>
                                        <td class="test">SALES REP</td>
                                        <td class="test2"> <span t-if="s.user_id.name" t-field="s.user_id.name" /></td>

                                    </tr>

                                </table>
                            </div>





                        </div>


                        <div class="row" style="margin-top:50px;">
                            <table style="border:1px solid black; border-bottom:1px solid black;" width="100%">
                                <tr>
                                    <thead>
                                        <td style="border-bottom:1px solid black; padding:3px; border-right:1px solid black; background-color:#d1d1d1; color:black;" align="center" width="5%">
                                            <span style="font-size:18px; font-weight:bold;">SO LINE#</span>
                                        </td>
                                        <td style="border-bottom:1px solid black;border-right:1px solid black; padding:3px; background-color:#d1d1d1; color:black;"   width="10%"  align="center">
                                            <span style="font-size:18px; font-weight:bold;">QTY</span>
                                        </td>
                                        <td style="border-bottom:1px solid black; padding:3px; border-right:1px solid black; background-color:#d1d1d1; color:black;"   width="30%"  align="center">
                                            <span style="font-size:18px; font-weight:bold;">Description</span>
                                        </td>
                                        <td  style="border-bottom:1px solid black; padding:3px; border-right:1px solid black; background-color:#d1d1d1; color:black;"  align="center" width="10%">
                                            <span style="font-size:18px; font-weight:bold;">UOM</span>
                                        </td>
                                        <td style="border-bottom:1px solid black; border-right:1px solid black; padding:3px; background-color:#d1d1d1; color:black;"   width="10%"  align="center">
                                            <span style="font-size:18px; font-weight:bold;">TAXES</span>
                                        </td>

                                        <td  style="border-bottom:1px solid black;border-right:1px solid black; padding:3px; background-color:#d1d1d1; color:black;"  align="center" width="15%">
                                            <span style="font-size:18px; font-weight:bold;">UNIT PRICE</span>
                                        </td>

                                        <td style="border-bottom:1px solid black; padding:3px; background-color:#d1d1d1; color:black;"   width="20%"  align="center">
                                            <span style="font-size:18px; font-weight:bold;">EXTENDED PRICE</span>
                                        </td>
                                    </thead>
                                </tr>
                                <tr>
                                    <tbody class="sale_tbody">
                                        <t t-set="current_subtotal" t-value="0.0" />
                                        <t t-set="index" t-value="1" />
                                      <!--    <t t-set="line_last" t-value="s.get_line_last()"/>   -->
                                        <t t-foreach="doc.order_line" t-as="line">

                                            <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                                            <t t-set="current_subtotal" t-value="current_subtotal + line.price_total" groups="account.group_show_line_subtotals_tax_included"/>


                                            <tr t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''">

                                                <t t-if="line.display_type == 'line_section'">
                                                    <td name="                                                                             " colspan="99">
                                                        <span t-field="line.name"/>
                                                    </td>
                                                     <t t-set="current_subtotal" t-value="0"/>
                                                      <t t-set="current_section" t-value="line"/>
                                                </t>

                                            </tr>
                                            <tr t-if="line.display_type == 'line_note'">

                                                <t t-if="line.display_type == 'line_note'">
                                                    <td name="td_section_line" colspan="99">
                                                        <span t-field="line.name"/>
                                                    </td>

                                                </t>

                                            </tr>
                                              
                                            <td t-if="line.display_type not in ['line_section', 'line_note']" style=" padding:3px; " align="center" width="5%">
                                                <span t-esc="index"/>
                                            </td>
                                            <td t-if="line.display_type not in ['line_section', 'line_note']" style=" padding:3px;  " align="center" width="10%">
                                                <span t-esc="line.product_uom_qty"/>
                                            </td>
                                            <td t-if="line.display_type not in ['line_section', 'line_note']" style=" padding:3px;  " align="center" width="30%">
                                                <strong t-esc="line.product_id.default_code"/><br/>
                                                <span  t-esc="line.name"/>
                                            </td>
                                            <td t-if="line.display_type not in ['line_section', 'line_note']" style=" padding:3px;  " align="center" width="10%">
                                                <span t-esc="line.product_uom.name"/>
                                            </td>
                                            <td t-if="line.display_type not in ['line_section', 'line_note']" style=" padding:3px;  " align="center" width="10%">
                                                <span t-esc="', '.join(map(lambda x: (x.description or x.name), line.tax_id))"/>
                                            </td>
                                            <td t-if="line.display_type not in ['line_section', 'line_note']" style="padding:3px; " align="center" width="15%">
                                                <span t-esc="line.price_unit"/>
                                            </td>

                                            <td t-if="line.display_type not in ['line_section', 'line_note']" style="padding:3px; " align="center" width="20%">
                                                <span t-esc="line.price_subtotal"/>
                                            </td>
                                            <t t-if="line.display_type not in ['line_section', 'line_note']" t-set="index" t-value="index+1"/>
                                             
                                               
                                                  
                                                
                                                   <t t-if="current_section and (line_last or doc.order_line[line_index+1].display_type == 'line_section')">
                                                    <tr class="is-subtotal text-right">
                                                        <td name="td_section_subtotal" colspan="99">
             
                                                            <strong class="mr16">Subtotal</strong>
                                                            <span t-esc="current_subtotal" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: doc.pricelist_id.currency_id}"/>
                                                        </td>
                                                    </tr>
                                                   </t>
                                             
                                        </t>
                                    </tbody>
                                </tr>
                            </table>

                        </div>

                        <div class="row">
                            <div class="col-4 text-left">

                            </div>
                            <div class="col-4 text-center"></div>
                            <div class="col-4 text-right">
                                <table width="100%" style="border:none;">
                                    <tr>
                                        <td style="border-bottom:none;">Subtotal:</td>
                                        <td style="border-bottom:none;"><span t-field="s.amount_untaxed"/></td>

                                    </tr>
                                    <!-- <tr>
                                        <td style="border-bottom:none;">Tax <span t-if="s.order_line.tax_id" t-esc="', '.join(map(lambda x: (x.description or x.name), s.order_line.tax_id[0]))"/> Amount</td>
                                        <td style="border-bottom:none;"><span t-field="s.amount_tax"></span></td>

                                    </tr> -->
                                    
                            <t t-foreach="doc.amount_by_group" t-as="amount_by_group">
                                <tr style="">
                                    <t t-if="amount_by_group[5] == 1 and doc.amount_untaxed == amount_by_group[2]">
                                        <td name="td_amount_by_group_label_3">
                                            <span t-esc="amount_by_group[0]"/>
                                            <span>&amp;nbsp;<span>on</span>&amp;nbsp;<t t-esc="amount_by_group[2]" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: doc.pricelist_id.currency_id}"/></span>
                                        </td>
                                        <td name="td_amount_by_group_3" class="text-right o_price_total">
                                            <span t-esc="amount_by_group[1]" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: doc.pricelist_id.currency_id}"/>
                                        </td>
                                    </t>
                                    <t t-else="">
                                        <td name="td_amount_by_group_label">
                                            <span t-esc="amount_by_group[0]"/>
                                        </td>
                                        <td name="td_amount_by_group" class="text-right o_price_total">
                                            <span t-esc="amount_by_group[1]" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: doc.pricelist_id.currency_id}"/>
                                        </td>
                                    </t>
                                </tr>
                            </t>
                                    <tr>
                                        <td style="border-bottom:none;">Grand Total:</td>
                                        <td> <span t-field="s.amount_total"></span></td>

                                    </tr>


                                </table>
                            </div>
                        </div>













                    </div>

                </t>
            </t>
        </t>



    </template>







</odoo>
