<odoo>
    <data>

          <template id="menu_advance_request" name="Show Expense/ ifty"
                    customize_show="True" inherit_id="portal.portal_my_home"
                    priority="40">
              <xpath expr="//div[hasclass('o_portal_docs')]" position="inside">
                  <t t-call="portal.portal_docs_entry">
                  <t t-set="title">Advance Salary</t>
                      <t t-set="url" t-value="'/advance/salary'"/>
                      <t t-set="placeholder_count" t-value="'advance_count'"/>
                  </t>
              </xpath>
         </template>

        

               
        
        <template id="portal_advance_salary" name="Advance Salary">
         <t t-set="foo" t-value="2 + 1"/>
        <t t-call="portal.portal_layout">
            <t t-set="breadcrumbs_searchbar" t-value="True"/>
            <t t-call="portal.portal_searchbar">
                <t t-set="title">Advance Salary</t>
            </t>
         
    
                <t t-call="portal.portal_table">
                    <t t-foreach="grouped_adv_salary" t-as="adv_salary">
                        <thead>
                            <tr t-attf-class="{{'thead-light' if not groupby == 'none' else ''}}">
                                <th class="text-left">No#</th>
                                <th class="text-left">Description</th>
                                <th class="text-left">Employee</th>
                                <th class="text-left">Date</th>
                                <th class="text-left">Total Amount</th>
                                <th class="text-left">Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="adv_salary" t-as="adv">   
<!--                             <t t-if="adv.employee_id.user_id.id == uid">    -->
                                
                                <tr>
                                    <td class="text-left">
                                        <span t-esc="adv.id" />
                                    </td>
                                     <td>
                                        <a t-attf-href="/advance/salary/#{adv.id}?{{ keep_query() }}"><span t-field="adv.name"/></a>
                                    </td>
                                     <td class="text-left">
                                        <span t-esc="user_id.name" />
                                    </td>
                                
                                   
                                    <td class="text-left">
                                        <span t-esc="adv.date" />
                                    </td>
                                    <td class="text-left">
                                        <span t-esc="adv.amount" />
                                    </td>
                                    <td class="text-left">
                                        <t t-if="adv.state == 'draft'">
                                            <i class="badge badge-pill badge-info" >To Submit</i>
                                        </t>
                                        <t t-if="adv.state == 'submit'">
                                            <i class="badge badge-pill badge-info" >Submitted</i>
                                        </t>
                                        <t t-if="adv.state == 'approved'">
                                            <i class="badge badge-pill badge-info" >Approved</i>
                                        </t>
            
                                        <t t-if="adv.state == 'post'">
                                            <i class="badge badge-pill badge-info" >Post</i>
                                        </t>
                                         <t t-if="adv.state == 'done'">
                                            <i class="badge badge-pill badge-info" >Paid</i>
                                        </t>
                                        <t t-if="adv.state == 'close'">
                                            <i class="badge badge-pill badge-info" >Closed</i>
                                        </t>
                                        <t t-if="adv.state == 'cancel'">
                                            <i class="badge badge-pill badge-info" >Refused</i>
                                        </t>
                                    </td>
                                    
                                </tr>
<!--                             </t> -->
                            </t>    

                            <tr>
                                <div>
                                    <t class="col-lg-7 col-md-8" >
                                        <a href="/salary_webform" > <div class="btn btn-primary pull-left" style="height:30px; line-height:100%; ">Create</div> </a> 
                                    </t>
                                </div>
                            </tr> 
                        </tbody>
                    </t>
                </t>
            </t>   
    </template>
        
