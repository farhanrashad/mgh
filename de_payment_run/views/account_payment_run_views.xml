<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="account_payment_run_form_view" model="ir.ui.view">
        <field name="name">account.payment.run.form.view</field>
        <field name="model">account.payment.run</field>
        <field name="arch" type="xml">
            <form string="Payment Run" class="oe_form_configuration">
                <field name="partner_type" invisible="1"/>
                <field name="company_id" invisible="1"/>
                <field name="count_proposal" invisible="1" />
                <header>
                    <button name="button_prepare_proposal" 
                        string="Proposal" 
                        type="object" 
                        class="oe_highlight"
                        groups="account.group_account_invoice" 
                        invisible="state not in ('draft')"
                    />
                    <button name="button_draft" 
                        string="Set to Draft" 
                        type="object" 
                        groups="account.group_account_invoice" 
                        invisible="state not in ('cancel')"
                    />

                    <button name="button_cancel" 
                        string="Cancel" 
                        type="object" 
                        groups="account.group_account_invoice" 
                        invisible="state not in ('draft','proposal')"
                    />

                    <button name="button_submit" 
                        string="Submit" 
                        type="object" 
                        groups="account.group_account_invoice" 
                        class="oe_highlight"
                        invisible="state not in ('proposal')"
                    />

                    
                    
                    <button name="button_schedule" 
                        string="Schedule" 
                        type="object" 
                        class="oe_highlight"
                        groups="account.group_account_invoice" 
                        data-hotkey="d"        
                        invisible="state != 'proposal' or run_method != 'scheduled'"
                    />

                    <button name="button_approve" 
                        string="Approve Proposal" 
                        type="object" 
                        class="oe_highlight"
                        groups="de_payment_run.group_payment_proposal_approve" 
                        data-hotkey="a"        
                        invisible="state != 'submit' or run_method != 'now'"

                    />
                    
                    <button name="button_post" 
                        string="Post" 
                        type="object" 
                        class="oe_highlight"
                        groups="account.group_account_invoice" 
                        data-hotkey="e"        
                        invisible="state != 'approve' or run_method != 'now'"

                    />
                    
                    <field name="state" widget="statusbar" statusbar_visible="draft,proposal,scheduled,posted"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button 
                            name="open_payment_proposal"
                            class="oe_stat_button"
                            icon="fa-file-text-o"
                            type="object">
                            <field name="count_proposal" widget="statinfo" string="Proposal"/>
                        </button>

                        <button 
                            invisible="count_payments == 0"
                                name="open_payments"
                                class="oe_stat_button"
                                icon="fa-dollar"
                                type="object">
                            <field name="count_payments" widget="statinfo" string="Payments"/>
                        </button>

                        
                    </div>
                    
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" 
                                readonly="state != 'draft'"
                                placeholder="e.g Payment on 01-01-2024" class="d-block"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="payment_type" widget="radio" options="{'horizontal': True}"
                                readonly="state != 'draft'"
                                />

                            <field name="run_method" 
                                readonly="state != 'draft'"
                                widget="radio"
                            />
                            
                            <field name="date"
                                readonly="state != 'proposal'"
                                   required="run_method == 'scheduled' "
                            />
                            <field name="date_next_run"
                                      readonly="state != 'draft'"
                                />
                        </group>
                        <group>
                            <field name="company_id" 
                                readonly="state != 'draft'"
                                groups="base.group_multi_company"/>
                        </group>
                    </group>
                    <group>
                                <group >
                                    <field name="date_accounting" 
                                        readonly="state not in ('draft','proposal','submit','approve')"
                                        required="state in ('approve')"
                                    />
                                    <field name="group_payment" 
                                        readonly="state not in ('draft','proposal','submit','approve')"
                                    />
                                </group>
                                
                            </group>
                    <notebook>
                        <page name="invoices" string="Invoices">
                            <field name="include_move_ids_domain" invisible="1" />
                            <button name="button_select_invoices" 
                                string="Select Invoices" 
                                type="object" 
                                class="oe_highlight"
                                groups="account.group_account_invoice" 
                                invisible="state not in ('draft')"
                            />
                            <field name="include_move_ids" 
                               readonly="state not in ('draft','proposal')"
                                context="{'tree_view_ref': 'de_payment_run.invoice_payment_run_tree_view'}"
                                domain="[('id','in',include_move_ids_domain)]"
                            >
                                <list>
                                    <field name="name"/>  
                                    <field name="partner_id"/>
                                    <field name="invoice_date"/>
                                    <field name="invoice_date_due"/>
                                    <field name="amount_total_signed"/>
                                    <field name="state"/>
                                    <field name="payment_state"/>
                                </list>
                            </field>
                        </page>
                        
                        <page name="exclude_partners" invisible="1" string="Exclude Partners">
                            <field name="exclude_partner_ids" 
                               readonly="state not in ('draft','proposal')"
                            >
                                <list>
                                    <field name="name"/>  
                                    <field name="email"/> 
                                </list>
                            </field>
                        </page>
                        <page name="parameters" invisible="1" string="Parameters">
                            <group>
                                <group >

                                </group>
                                
                            </group>
                        </page>
                        <page name="extra_selection" invisible="1" string="Extra Selection">
                            <group>
                                <group >
                                    <field name="date_invoice" 
                                        readonly="state not in ('draft','proposal')"
                                        />
                                    <field name="date_due_by" 
                                       readonly="state not in ('draft','proposal')"
                                        />
                                </group>
                            </group>
                            <group >
                                <field name="filter_domain" 
                                    widget="domain" 
                                    string="Apply On" 
                                    options="{'model': 'account.move', 'in_dialog': True}"
                                    readonly="state not in ('draft','proposal')"
                                />
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <!-- Chatter -->
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="account_payment_run_tree_view" model="ir.ui.view">
        <field name="name">account.payment.run.tree.view</field>
        <field name="model">account.payment.run</field>
        <field name="arch" type="xml">
            <list sample="1" >
                <field name="name" />
                <field name="partner_type" />
                <field name="date" />
                <field name="date_accounting" />
                <field name="state" string="Status" 
                    decoration-success="state == 'sale'" 
                    decoration-info="state == 'draft'" 
                    decoration-primary="state == 'sent'" 
                    widget="badge" 
                />
                <field name="company_id" groups="base.group_multi_company"/>
            </list>
        </field>
    </record>

    <!-- Search view -->
    <record id="account_payment_run_filter_view" model="ir.ui.view">
            <field name="name">account.payment.run.filter.view</field>
            <field name="model">account.payment.run</field>
            <field name="priority" eval="15"/>
            <field name="arch" type="xml">
                <search string="Search Payment Run">
                    <field name="name" />
                    <field name="payment_type" />
                    <field name="state" />

                    <filter string="To Approve" domain="[('state', '=', 'proposal')]" name="to_approve_filtler"/>
                    <filter string="Approved" domain="[('state', '=', 'approve')]" name="approved_filter"/>
                    <filter string="Scheduled" domain="[('state', '=', 'scheduled')]" name="scheduled_filter"/>
                    <filter string="Posted" domain="[('state', '=', 'posted')]" name="posted_filter"/>
                    <filter string="Cancel" domain="[('state', '=', 'cancel')]" name="cancel_filter"/>
                    <separator/>
                    <filter string="Send Money" domain="[('payment_type', '=', 'outbound')]" name="outbound_filtler"/>
                    <filter string="Receive Money" domain="[('payment_type', '=', 'inbound')]" name="inbound_filtler"/>
                    <group expand="0" string="Group By">
                        <filter name="state" string="Status" domain="[]" context="{'group_by': 'state'}"/>
                    </group>
                </search>
            </field>
    </record>
    
    <record id="action_payable_payment_run" model="ir.actions.act_window">
        <field name="name">Payment Run</field>
        <field name="res_model">account.payment.run</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="account_payment_run_filter_view"/>
        <field name="domain">[
            ('partner_type', '=', 'supplier'),
        ]</field>
        <field name="context">{
            'default_partner_type': 'supplier',
            'default_payment_type': 'outbound',
            }
        </field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a payment run
            </p>
            <p>
                Automated payment run streamlines payment processing by generating and executing payments automatically based on predefined criteria.
            </p>
        </field>
    </record>

    <menuitem name="Payment Run" 
        id="menu_finance_payables_payment_run"
        parent="account.menu_finance_payables" 
        action="action_payable_payment_run"
        sequence="50"
    />

    <record id="action_receivable_payment_run" model="ir.actions.act_window">
        <field name="name">Payment Run</field>
        <field name="res_model">account.payment.run</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[
            ('partner_type', '=', 'customer'),
        ]</field>
        <field name="context">{
            'default_partner_type': 'customer',
            'default_payment_type': 'inbound',
            }
        </field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a payment run
            </p>
            <p>
                Automated payment run streamlines payment processing by generating and executing payments automatically based on predefined criteria.
            </p>
        </field>
    </record>
