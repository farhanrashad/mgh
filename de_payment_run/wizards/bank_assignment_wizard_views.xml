<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="account_bank_assign_wizard_form_view" model="ir.ui.view">
        <field name="name">account.bank.assign.wizard.form.view</field>
        <field name="model">account.bank.assign.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="payment_run_line" readonly="1" widget="many2many_tags" invisible="1"/>
                        <field name="journal_ids_domain" widget="many2many_tags" invisible="1"/>
                        <field name="journal_id" 
                            options="{'no_create':True, 'no_edit':True}"
                            
                        />
                    </group>
                    
                </group>
                <footer>
                    <button name="action_assign" string="Assign" type="object" class="btn-primary"/>
                    <button special="cancel" string="Cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="ir_actions_server_action_bank_assignment" model="ir.actions.server">
        <field name="name">Assign Bank</field>
        <field name="model_id" ref="de_payment_run.model_account_payment_run_line"/>
        <field name="state">code</field>
        <field name="binding_model_id" ref="de_payment_run.model_account_payment_run_line" />
        <field name="binding_view_types">list</field>
        <field name="code">
action = env['account.payment.run.line'].action_bank_assignment()
        </field>
        <field name="groups_id" eval="[(4, ref('account.group_account_invoice'))]"/>
    </record>
    
   
</odoo>
