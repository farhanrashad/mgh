<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="product_supplierinfo_form_view_inherit" model="ir.ui.view">
        <field name="name">product.supplierinfo.form.inherit</field>
        <field name="model">product.supplierinfo</field>
        <field name="inherit_id" ref="product.product_supplierinfo_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="est_landed_cost"/>
                <field name="total_cost"/>
            </xpath>

        </field>
    </record>

        <record id="view_product_supplierinfo_form_inherit" model="ir.ui.view">
            <field name="name">product.supplierinfo.inherit</field>
            <field name="model">product.supplierinfo</field>
            <field name="inherit_id" ref="product.product_supplierinfo_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <field name="is_applicable"/>
                </xpath>
            </field>
        </record>

    <record id="product_template_product_form_view_inherit" model="ir.ui.view">
        <field name="name">product.template.product.form</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='standard_price']" position="attributes">
                <attribute name='string'>Actual Cost</attribute>
            </xpath>

            <xpath expr="//field[@name='barcode']" position="after">
                <field name="sale_price_comp"/>
                <field name="percentage_addition"/>
                <field name="min_profit"/>
                <field name="min_sale"/>
                <field name="vendor_id" invisible="1"/>
<!--                <field name="vendor_purchase" invisible="1"/>-->
            </xpath>

            <xpath expr="//field[@name='seller_ids']" position="replace">
                <field name="seller_ids">
                    <list editiable="bottom">
                        <field name="is_applicable"/>
                        <field name="name"/>
                        <field name="product_name"/>
                        <field name="currency_id"/>
                        <field name="min_qty"/>
                        <field name="product_uom"/>
                        <field name="price"/>
                        <field name="est_landed_cost"/>
                        <field name="total_cost"/>
                    </list>
                </field>
            </xpath>

        </field>
    </record>



	<record id="sale_form_view_inherit" model="ir.ui.view">
        <field name="name">sale.order.form.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']/list/field[@name='price_unit']" position="before">
                <field name="cost_price"/>
            </xpath>

        </field>
    </record>


</odoo>
