<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>
        
        <record id="product_product_bank_document_form_view" model="ir.ui.view">
            <field name="name">product.product.bank.document.form</field>
            <field name="model">product.product</field>
            <field name="arch" type="xml">
                <form string="Bank Products">
                    <sheet>
                        <widget name="web_ribbon" title="Archived" bg_color="bg-danger"
                                invisible="active == True"/>
                        <field name='product_variant_count' invisible='1'/>
                        <field name="id" invisible="True"/>
                        <field name="image_1920" widget="image" class="oe_avatar" options="{'image_preview': 'image_128'}"/>
                        <field name="type" invisible="1"/>
                        <div class="oe_title">
                            <label for="name" string="Product Name"/>
                            <h1><field name="name" placeholder="e.g. Lunch"/></h1>
                            <div name="options" groups="base.group_user" invisible="1">
                                <div>
                                    <field name="can_be_bank_document"/>
                                    <label for="can_be_bank_document"/>
                                </div>
                            </div>
                        </div>
                        <group name="product_details">
                            <group string="General Information">
                                <field name="active" invisible="1"/>
                                <field name="type" invisible="1"/>
                                <field name="type" invisible="1"/>
                                <field name="list_price" invisible="1"/>
                                <field name="uom_id" groups="uom.group_uom" options="{'no_create': True}"/>
                                <field name="uom_po_id" invisible="1"/>
                                <label for="default_code"/>
                                <div>
                                    <field name="default_code"/>
                                    <i class="text-muted oe_edit_only">Use this reference as a subject prefix when submitting by email.</i>
                                </div>
                                <field name="company_id" groups="base.group_multi_company"/>
                                <field name="allow_account_transaction"/>
                            </group>
                            <group string="Accounting">
                                <field name="property_account_expense_id" string="Payable Account" groups="account.group_account_readonly"/>
                                <field name="property_account_income_id" string="Receivable Account" groups="account.group_account_readonly"/>
                                <field name="supplier_taxes_id" widget="many2many_tags" context="{'default_type_tax_use':'purchase'}"/>
                                <field name="taxes_id" widget="many2many_tags" context="{'default_type_tax_use':'sale'}" invisible="1"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <record id="product_product_bank_tree_view" model="ir.ui.view">
            <field name="name">product.product.bank.tree</field>
            <field name="model">product.product</field>
            <field eval="50" name="priority"/>
            <field name="arch" type="xml">
                <list string="Bank Product">
                    <field name="default_code"/>
                    <field name="name"/>
                    <field name="uom_id" options="{'no_open': True, 'no_create': True}" groups="uom.group_uom"/>
                    <field name="barcode"/>
                </list>
            </field>
        </record>
        
        
        <record id="account_bank_product" model="ir.actions.act_window">
            <field name="name">Bank Products</field>
            <field name="res_model">product.product</field>
            <field name="view_mode">list,form</field>
            <field name="search_view_id" ref="product.product_search_form_view"/>
            <field name="context">{"default_can_be_bank_document": 1, 'default_type': 'service'}</field>
            <field name="domain">[('can_be_bank_document', '=', True)]</field>
            <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                No Bank products found. Let's create one!
              </p>
            </field>
        </record>

        <record id="bank_product_tree" model="ir.actions.act_window.view">
            <field name="sequence" eval="2"/>
            <field name="view_mode">list</field>
            <field name="act_window_id" ref="account_bank_product"/>
        </record>
        
        <record id="bank_product_form" model="ir.actions.act_window.view">
            <field name="sequence" eval="3"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="product_product_bank_document_form_view"/>
            <field name="act_window_id" ref="account_bank_product"/>
        </record>
        
        <menuitem id="menu_bank_document_product" name="Bank Products" parent="menu_finance_bank_docs"
            action="account_bank_product" groups="account.group_account_manager" sequence="20"/>
        
    </data>
</odoo>