<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <record id="mail_act_document_approval" model="mail.activity.type">
            <field name="name">Document Approval</field>
            <field name="icon">fa-dollar</field>
            <field name="res_model">account.bank.docs</field>
        </record>

        

        <!-- Expense-related subtypes for messaging / Chatter -->
        <record id="mt_document_approved" model="mail.message.subtype">
            <field name="name">Approved</field>
            <field name="res_model">account.bank.docs</field>
            <field name="default" eval="True"/>
            <field name="description">Bank document approved</field>
        </record>
        <record id="mt_document_refused" model="mail.message.subtype">
            <field name="name">Refused</field>
            <field name="res_model">account.bank.docs</field>
            <field name="default" eval="True"/>
            <field name="description">Bank document refused</field>
        </record>
        <record id="mt_document_paid" model="mail.message.subtype">
            <field name="name">Paid</field>
            <field name="res_model">account.bank.docs</field>
            <field name="description">Bank document paid</field>
            <field name="default" eval="True"/>
        </record>
    </data>
</odoo>
