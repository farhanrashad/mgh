<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<!--Adding a salary rule for loan-->
	<data noupdate="0">
        
        <record id="structure_002" model="hr.payroll.structure">
            <field name="name">Regular Pay</field>
            <field name="type_id" ref="hr_contract.structure_type_employee"/>
            <field name="country_id" eval="False"/>
        </record>
        
        
        <record id="hr_rule_input_salary_advance" model="hr.payslip.input.type">
            <field name="code">LNI</field>
            <field name="name">Employee Loan</field>
        </record>
        
        <record id="hr_salary_rule_advance_salary" model="hr.salary.rule">
            <field name="amount_select">code</field>
            <field name="code">LN</field>
            <field name="category_id" ref="hr_payroll.DED"/>
            <field name="name">Loan Deduction</field>
            <field name="sequence" eval="99"/>
            <field name="amount_python_compute">result = inputs.LNI.amount</field>
            <field name="struct_id" ref="structure_002"/>
         </record>
	</data>
</odoo>
