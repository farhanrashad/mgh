<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <record model="ir.module.category" id="module_category_hr_employee_loan">
        <field name="name">Employee Loan</field>
        <field name="description">Helps you manage employee Loan.</field>
        <field name="sequence">12</field>
    </record>
    
    <record id="group_hr_loan_team_approver" model="res.groups">
        <field name="name">Team Approver</field>
        <field name="category_id" ref="module_category_hr_employee_loan"/>
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
    </record>

    <record id="group_hr_loan_user" model="res.groups">
        <field name="name">All Approver</field>
        <field name="category_id" ref="module_category_hr_employee_loan"/>
        <field name="implied_ids" eval="[(4, ref('de_emp_books_loan.group_hr_loan_team_approver'))]"/>
    </record>

    <record id="group_hr_loan_manager" model="res.groups">
        <field name="name">Administrator</field>
        <field name="category_id" ref="module_category_hr_employee_loan"/>
        <field name="implied_ids" eval="[(4, ref('de_emp_books_loan.group_hr_loan_user'))]"/>
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
    </record>

    <record id="base.default_user" model="res.users">
        <field name="groups_id" eval="[(4,ref('de_emp_books_loan.group_hr_loan_manager'))]"/>
    </record>
    
    <record id="group_show_employee_loan_close_button" model="res.groups">
        <field name="name">Show Loan Close button</field>
        <field name="comment">Show button (Close) to manually mark loan request to close permanantly for paid loan, There is no need with enterprise payroll app.</field>
        <field name="category_id" ref="base.module_category_hidden"/>
    </record>
    
</odoo>
