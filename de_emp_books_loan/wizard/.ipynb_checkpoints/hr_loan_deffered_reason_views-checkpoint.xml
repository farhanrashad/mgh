<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_employee_advance_deffered_wizard_view_form" model="ir.ui.view">
        <field name="name">hr.employee.advance.deffered.wizard.form</field>
        <field name="model">hr.employee.advance.deffered.wizard</field>
        <field name="arch" type="xml">
            <form string="Request advance deffered">
                <group>
                    <group>
                        <label for="deffered_period" string="Deffered For" />
                <div class="d-flex" >
                    <field name="deffered_period" force_save="1" placeholder="e.g 1" />
                    <span class="o_form_label mx-3 oe_edit_only" > Month(s) </span>
                </div>
                    </group>
                </group>
                <separator string="Reason to deffered Request"/>
                <field name="hr_advance_id" invisible="1"/>
                
                
                <field name="reason"/>
                <footer>
                    <button string='Deffered' name="advance_deffered_reason" type="object" class="oe_highlight"/>
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
           </form>
        </field>
    </record>

    <record id="hr_advance_request_deffered_wizard_action" model="ir.actions.act_window">
        <field name="name">Deffered Advance Request</field>
        <field name="res_model">hr.employee.advance.deffered.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="hr_employee_advance_deffered_wizard_view_form"/>
        <field name="target">new</field>
    </record>
</odoo>
