  <data>
    <record id="view_shipping_form" model="ir.ui.view">
        <field name="name">shipping.term.form</field>
        <field name="model">shipping.term</field>
        <field name="arch" type="xml">
            <form string="Shipping Terms">
                <sheet>
                    <group>
                        <field name="name" placeholder="e.g 'Shipping Term'"/>
                    </group>
                    <group>
                        <field name='description'/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


    <record id="view_shipping_tree" model="ir.ui.view">
        <field name="name">shipping_term.tree</field>
        <field name="model">shipping.term</field>
        <field name="arch" type="xml">
            <list string="Shipping Terms Tree">
                <field name="name"/>
            </list>
        </field>
    </record>


