<?xml version="1.0" encoding="utf-8"?>
<odoo>
<record id="view_service_record_line_items" model="ir.ui.view">
        <field name="name">service.record.line.items</field>
        <field name="model">hr.service.record.line.items</field>
        <field name="arch" type="xml">
            <form string="Assign Serial Numbers">
                <group>
                    <field name="hr_service_record_line_id" invisible="1"/>
                </group>
                <footer>
                    <!--
                    <button name="generate_serial_numbers" type="object"
                            string="Generate Items" class="oe_highlight"/>
-->
                    <button special="cancel" string="Cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="act_service_record_line_items" model="ir.actions.act_window">
        <field name="name">Record Line Items</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.service.record.line.items</field>
        <field name="view_mode">form</field>
        <field name="context">{}</field>
        <field name="target">new</field>
    </record>
</odoo>