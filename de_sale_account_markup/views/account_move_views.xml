<odoo>
  <data>
    <record id="account_move_view_inherit" model="ir.ui.view">
        <field name="name">account.move.form.view.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_line_ids']//field[@name='price_unit']" position="before">
                    <field name="price_excl_markup" invisible="0" force_save="1"/>
                <field name="markup" invisible="0" force_save="1"/>
                </xpath>
                <xpath expr="//field[@name='line_ids']//field[@name='price_unit']" position="before">
                    <field name="price_excl_markup" invisible="0" force_save="1"/>
                    <field name="markup" invisible="0" force_save="1"/>
                </xpath>
        </field>
    </record>
  </data>
</odoo>